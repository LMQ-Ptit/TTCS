mixin product-grid(products)
    .row.g-4
        if products.length > 0
            each item in products 
                .col-lg-4.col-md-6.mb-4
                    .card.product-item.h-100.border-0.shadow-sm.rounded-3.overflow-hidden.transition-all
                        .position-relative.overflow-hidden.product-image-container
                            // Badge cho sản phẩm nổi bật
                            if(item.featured=='1')
                                .position-absolute.top-0.start-0.p-2.z-1
                                    span.badge.bg-success.rounded-pill.shadow-sm
                                        i.fas.fa-star.me-1
                                        | Nổi bật
                            
                            // Badge cho khuyến mãi
                            if item.discountPercentage > 0
                                .position-absolute.top-0.end-0.p-2.z-1
                                    span.badge.bg-danger.rounded-pill.shadow-sm
                                        i.fas.fa-tag.me-1
                                        | -#{item.discountPercentage}%
                            
                            // Ảnh sản phẩm với hiệu ứng hover
                            a.product-image-link(href=`products/${item.slug}`)
                                img.card-img-top.product-image(src=item.thumbnail, alt=item.title)
                            
                            // Nút hành động với hiệu ứng hiện lên khi hover
                            .product-actions.position-absolute.bottom-0.start-0.end-0.p-3.bg-light.bg-opacity-75.d-flex.justify-content-between.transform-fadeup
                                button.btn.btn-primary.rounded-pill.shadow-sm.flex-grow-1.me-2(title="Xem chi tiết")
                                    i.fas.fa-shopping-cart.me-2
                                    | Xem chi tiết
                                
                        
                        .card-body.p-4
                            // Tên sản phẩm
                            h3.card-title.fs-5.mb-3.product-title
                                a.text-decoration-none.text-dark.stretched-link(href=`products/${item.slug}`) #{item.title}
                            
                            // Phần giá
                            .d-flex.justify-content-between.align-items-center
                                .price-wrapper
                                    span.fw-bold.fs-4.me-2.text-primary #{item.priceNew.toLocaleString('vi-VN')}₫
                                    if item.price > item.priceNew
                                        span.text-decoration-line-through.text-muted.fs-6 #{item.price.toLocaleString('vi-VN')}₫
        else 
            
            .col-lg-4.col-md-6.mb-4
                .card.product-item.h-100.border-0.shadow-sm.rounded-3.overflow-hidden.transition-all
                    .card-body.p-4.text-center
                        p.text-muted Không có sản phẩm nào trong danh mục này.
        

block style
    style.
        .product-item {
            transition: all 0.3s ease;
        }
        
        .product-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }
        
        .product-image-container {
            aspect-ratio: 3/2;
            background-color: #f8f9fa;
        }
        
        .product-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }
        
        .product-item:hover .product-image {
            transform: scale(1.05);
        }
        
        .product-title {
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }
        
        .transform-fadeup {
            transform: translateY(100%);
            opacity: 0;
            transition: all 0.3s ease;
        }
        
        .product-item:hover .transform-fadeup {
            transform: translateY(0);
            opacity: 1;
        }
        
        .btn-wishlist {
            width: 40px;
            height: 40px;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .btn-wishlist:hover {
            background-color: #dc3545;
            color: white;
        }
        
        .transition-all {
            transition: all 0.3s ease;
        }